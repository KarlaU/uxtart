@import "iconfonts.styl"

colorSeleccion = #b3d4fc
rojito = #ff4d4d

html
button
input
select
textarea
    color #222

html
    font-size 16px
    line-height 1.4

::-moz-selection
    background colorSeleccion
    text-shadow none

::selection
    background colorSeleccion
    text-shadow none

hr
    display block
    height 1px
    border 0
    border-top 1px solid #ccc
    margin 1em 0
    padding 0

audio
canvas
img
video
    vertical-align middle

fieldset
    border 0
    margin 0
    padding 0

textarea
    resize vertical

.browsehappy
    margin 0.2em 0
    background #ccc
    color #000
    padding 0.2em 0


/* ==========================================================================
   Author's custom styles
   ========================================================================== */
*::-webkit-input-placeholder {
    color: white;
    font-family: 'PT Mono';
}

*:-moz-placeholder {
    /* FF 4-18 */
    color: white;
    font-family: 'PT Mono';
}

*::-moz-placeholder {
    /* FF 19+ */
    color: white;
    font-family: 'PT Mono';
}

*:-ms-input-placeholder {
    /* IE 10+ */
    color: white;
    font-family: 'PT Mono';
}
a:hover{
    text-decoration: none;
}
body{
    background-color: rojito;
}
footer img{
    margin: 0 10px;
    opacity: .8;
    width: 22px;
}
footer img:hover{
    opacity: 1;
}
h1, h2{
    letter-spacing: 5.5px;
    margin-bottom: 17px;
}
h2{
    font-size: 35px;
}
h1, h2, .call-to-action, .nav-container a{
    font-family: 'Montserrat', sans-serif;
    text-transform: uppercase;
}
hr{
    border-top: 2px solid #ffffff;
    margin: 0 auto 10px;
    width: 26px;
}
input, input[type="text"], textarea{
    margin: 10px;
    background-color: transparent;
    border: 1px solid white;
    padding: 11px;
    color: white;
    font-family: 'PT Mono';
    width: 90%;
}
p{
    font-family: 'PT Mono';
}
textarea:focus,
input[type="text"]:focus,
input[type="password"]:focus,
input[type="datetime"]:focus,
input[type="datetime-local"]:focus,
input[type="date"]:focus,
input[type="month"]:focus,
input[type="time"]:focus,
input[type="week"]:focus,
input[type="number"]:focus,
input[type="email"]:focus,
input[type="url"]:focus,
input[type="search"]:focus,
input[type="tel"]:focus,
input[type="color"]:focus,
input[type="submit"]:focus,
.uneditable-input:focus {
  border: 1px solid rgba(255,255,255, 0.9);
  box-shadow: 0 1px 1px rgba(255,255,255, 0.9) inset, 0 0 0px;
  outline: 0 none;
}

#animated-image{
    height: 470px;
    left: 53%;
    margin-left: -235px; /* Half the width */
    margin-top: -242.5px; /* Half the height */
    position: fixed;
    top: 50%;
    width: 470px;
}

#animated-image img{
    width: 100%;
}

.brand{
    width: 100px;
    margin-top: 11px;
}

.brand-container{
    height: 45px;
    display: inline-block;
}

.centered-elements{
    position: relative;
    top: 15%;
    z-index: 4;
    text-align: center;
}

.nav-container{
    padding-top: 37px;
}

.nav-container a{
    color: white;
    letter-spacing: 3px;
}

.process-diagram{
    opacity: .7;
    animation-timing-function:ease-in-out;
    transition-duration: 20s;
    -webkit-transition-duration: 20s;
}

.process-diagram:hover{
    opacity: 1;
}

.title-container{
    margin: 0 auto 0;
    max-width: 651px;
}

.title-container .lead{
    display: inline-block;
    margin-bottom: 37px;
}

.jumbotron
    background-color rojito
    color #ffeded
    margin-bottom 0
    padding 0
    position relative

    h1
    p
        text-align center

    h1
        font-size 47px

    p
        font-size 18px

    .call-to-action
        color rojito
        background-color #ffeded
        display inline-block
        max-width 380px
        padding 15px 20px

        &:hover
            color rojito
            background-color white

@import "components/header.styl"
@import "components/footer.styl"
@import "components/contact_form.styl"
@import "viewports.styl"
@import "utils.styl"
@import "print.styl"
